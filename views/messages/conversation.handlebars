   <h1>Conversation with {{muName}}</h1>

  <ul>
    {{#each messages}}
    <li> {{createdAt}} </li>
    <li> {{senderName}}: {{content}}</li>
    {{/each}}
  </ul>

  <form action="/messages/{{userId}}/messages/{{matchUserId}}/send" method="post">
    <label for="content">Enter your message here:</label>
    <input type="text" id="content" name="content" placeholder="Type your message..." required>
    <input type="submit" value="Send">
  </form>
  
