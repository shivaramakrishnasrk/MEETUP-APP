<br><br>
<h1>Messages</h1>
{{#if users}}
    <ul class="messUl">
      {{#each users}}
        <li class="messLi">
          <h2>{{this.name}}</h2>
          <img
            src="/{{this.image.destination}}/{{this.image.filename}}"
            alt="Profile image"
          >
          <p>{{this.bio}}</p>
          <a href="/matches/{{this._id}}/viewProfile" class="button">View Profile</a><br><br>

          <a href="/messages/{{../userId}}/messages/{{this._id}}" class="button">Message {{this.name}}</a>

        </li>
      {{/each}}
    </ul>
  {{else}}
    <p>No matches found.</p>
  {{/if}}
  <a href="/home/{{userId}}" class="button">Go to Home</a>
