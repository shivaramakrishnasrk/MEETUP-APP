<div>
  <h1>Profile</h1>
  {{#if user.image.path}}
    <img src="/{{user.image.destination}}/{{user.image.filename}}" alt="Profile image">
  {{else}}
    <p>No image uploaded</p>
  {{/if}}
  <p>Name: {{user.name}}</p>
  <p>Age: {{user.age}}</p>
  <p>City: {{user.city_name}}</p>
  <p>Zip : {{user.zip}}</p>
  <p>Gender : {{user.gender}}</p>
  <p>Bio: {{user.bio}}</p>
  <p>University : {{user.university}} </p>
  <p>Bucketlist : {{user.bucketlist}}</p>
  <p>Gym : {{user.gym}} </p>
  <p>Work : {{user.work}} </p>
</div>
<div>

  {{!-- TODO - Gives invalid html but changing to button breaks the code if any of fields has apostrophe  --}}
  <a href="/profile/{{user._id}}/edit?gender={{user.gender}}&university={{user.university}}&bucketlist={{user.bucketlist}}&gym={{user.gym}}" class="btn btn-primary">Edit profile</a>
    
    {{!-- <button onclick="editProfile('{{user._id}}', '{{user.gender}}', '{{user.university}}', '{{user.bucketlist}}', '{{user.gym}}')" class="btn btn-primary">Edit profile</button> --}}

  
  </div>
  {{#if user.isPaused}}

  <form method="POST" action="/profile/{{user._id}}/pause">
  <button type="submit" class="btn btn-danger btn-lg">Unpause Profile</button>
</form>

  {{else}}
  <form method="POST" action="/profile/{{user._id}}/pause">
  <button type="submit" class="btn btn-danger btn-lg">
    <i class="fas fa-pause-circle mr-2"></i> Pause Profile
  </button><br><br>
</form>
  {{/if}}


